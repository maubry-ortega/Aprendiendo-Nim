{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "nim",
      "args": ["r", "main.nim"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "nim",
      "args": ["r", "main.nim"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm",
      "args": ["main"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
